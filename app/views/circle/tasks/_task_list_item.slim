- task = ::TaskPresenter.new(task)

a.task href=circle_task_path(current_circle, task) class=task.css
  .task-date
    .month= l(task.due_date, format: "%b").upcase
    .day= task.due_date.day
  .task-icon
  .task-details
    .task-content
      .task-title= task.name
      .subtitle
        span= task.due_date
        - if task.message.present?
          span.bullet &bullet;
          span.status-message
           = task.message

    .task-stats
      .task-badge.task-badge--users
        i
        = "#{task.volunteers.count}/#{task.volunteer_count_required}"

      .task-badge.task-badge--comments
        i
        = task.comments.count
